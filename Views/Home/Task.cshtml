@model Mission8Assignment.Models.TaskModel

@{
    ViewData["Title"] = Model.TaskId == 0 ? "Add Task" : "Edit Task";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">

            <div class="row mb-4">
                <div class="col">
                    <h2 class="mb-0">
                        @(Model.TaskId == 0 ? "Add New Task" : "Edit Task")
                    </h2>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <form method="post"
                          asp-action="@(Model.TaskId == 0 ? "Add" : "Edit")"
                          asp-controller="Home">

                        <input type="hidden" asp-for="TaskId" />

                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="TaskName" class="form-label"></label>
                                <input asp-for="TaskName" class="form-control" />
                                <span asp-validation-for="TaskName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="DueDate" class="form-label"></label>
                                <input asp-for="DueDate" type="date" class="form-control" />
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Quadrant" class="form-label"></label>
                                <select asp-for="Quadrant" class="form-select" required>
                                    <option value="">Select Quadrant</option>
                                    <option value="1">Quadrant 1</option>
                                    <option value="2">Quadrant 2</option>
                                    <option value="3">Quadrant 3</option>
                                    <option value="4">Quadrant 4</option>
                                </select>
                                <span asp-validation-for="Quadrant" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label asp-for="CategoryId" class="form-label"></label>
                                <select asp-for="CategoryId"
                                        asp-items="ViewBag.Categories"
                                        class="form-select">
                                    <option value="">Select Category</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 d-flex align-items-end">
                                <div class="form-check">
                                    <input asp-for="Completed" class="form-check-input" />
                                    <label asp-for="Completed" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <div class="d-flex flex-wrap gap-2">
                                    <button type="submit" class="btn btn-primary">
                                        @(Model.TaskId == 0 ? "Add Task" : "Save Changes")
                                    </button>

                                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                                        Cancel
                                    </a>

                                    @if (Model.TaskId != 0)
                                    {
                                        <a asp-action="Delete"
                                           asp-controller="Home"
                                           asp-route-id="@Model.TaskId"
                                           class="btn btn-danger ms-0 ms-sm-2">
                                            Delete Task
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>