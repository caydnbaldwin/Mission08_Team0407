@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="covey-matrix">
                <!-- Row 1: Title inside matrix -->
                <div class="row covey-row covey-title-row">
                    <div class="col-12 text-center covey-title">
                        Stephen Covey's Time Management Matrix
                    </div>
                </div>

                <!-- Row 2: blank | Urgent | Not Urgent -->
                <div class="row covey-row">
                    <div class="col-2 covey-cell covey-empty"></div>
                    <div class="col-5 covey-cell text-center covey-header">
                        Urgent
                    </div>
                    <div class="col-5 covey-cell text-center covey-header">
                        Not Urgent
                    </div>
                </div>

                <!-- Row 3: Important | Quadrant 1 | Quadrant 2 -->
                <div class="row covey-row">
                    <div class="col-2 covey-cell covey-side">
                        <span>Important</span>
                    </div>

                    <div class="col-5 covey-cell covey-quadrant-cell">
                        <div class="covey-quadrant-title">Quadrant 1</div>
                        <div class="covey-task-list">
                            @if (ViewBag.Tasks != null)
                            {
                                @foreach (Mission8Assignment.Models.TaskModel task in ViewBag.Tasks)
                                {
                                    @if (task.Quadrant == 1)
                                    {
                                        <a class="covey-task-item covey-task-link"
                                           asp-controller="Home"
                                           asp-action="Task"
                                           asp-route-id="@task.TaskId">
                                            @task.TaskName
                                        </a>
                                    }
                                }
                            }
                        </div>
                    </div>

                    <div class="col-5 covey-cell covey-quadrant-cell">
                        <div class="covey-quadrant-title">Quadrant 2</div>
                        <div class="covey-task-list">
                            @if (ViewBag.Tasks != null)
                            {
                                @foreach (Mission8Assignment.Models.TaskModel task in ViewBag.Tasks)
                                {
                                    @if (task.Quadrant == 2)
                                    {
                                        <a class="covey-task-item covey-task-link"
                                           asp-controller="Home"
                                           asp-action="Task"
                                           asp-route-id="@task.TaskId">
                                            @task.TaskName
                                        </a>
                                    }
                                }
                            }
                        </div>
                    </div>
                </div>

                <!-- Row 4: Not Important | Quadrant 3 | Quadrant 4 -->
                <div class="row covey-row">
                    <div class="col-2 covey-cell covey-side">
                        <span>Not Important</span>
                    </div>

                    <div class="col-5 covey-cell covey-quadrant-cell">
                        <div class="covey-quadrant-title">Quadrant 3</div>
                        <div class="covey-task-list">
                            @if (ViewBag.Tasks != null)
                            {
                                @foreach (Mission8Assignment.Models.TaskModel task in ViewBag.Tasks)
                                {
                                    @if (task.Quadrant == 3)
                                    {
                                        <a class="covey-task-item covey-task-link"
                                           asp-controller="Home"
                                           asp-action="Task"
                                           asp-route-id="@task.TaskId">
                                            @task.TaskName
                                        </a>
                                    }
                                }
                            }
                        </div>
                    </div>

                    <div class="col-5 covey-cell covey-quadrant-cell">
                        <div class="covey-quadrant-title">Quadrant 4</div>
                        <div class="covey-task-list">
                            @if (ViewBag.Tasks != null)
                            {
                                @foreach (Mission8Assignment.Models.TaskModel task in ViewBag.Tasks)
                                {
                                    @if (task.Quadrant == 4)
                                    {
                                        <a class="covey-task-item covey-task-link"
                                           asp-controller="Home"
                                           asp-action="Task"
                                           asp-route-id="@task.TaskId">
                                            @task.TaskName
                                        </a>
                                    }
                                }
                            }
                        </div>
                    </div>
                </div>

            </div>

            <div class="mt-3 text-center text-muted">
                Click any task in a quadrant to view its details, edit the task, mark it as complete, or delete it.
            </div>

        </div>
    </div>
</div>
        </div>
    </div>
</div>